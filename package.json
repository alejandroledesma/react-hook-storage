{
    "author": "Alejandro Ledesma",
    "name": "react-hook-storage",
    "version": "0.1.0",
    "description": "React hook for manage the localStorage and sessionStorage",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alejandroledesma/react-hook-storage.git"
    },
    "bugs": {
        "url": "https://github.com/alejandroledesma/react-hook-storage.git/issues"
    },
    "keywords": [
        "react",
        "hooks",
        "localstorage",
        "sessionstorage",
        "storage"
    ],
    "scripts": {
        "test": "jest --env=jsdom",
        "lint": "eslint .",
        "validate": "yarn test && yarn lint",
        "prepublishOnly": "yarn validate"
    },
    "main": "src/index.js",
    "unpkg": "dist/react-hook-storage.umd.min.js",
    "jsDelivr": "dist/react-hook-storage.umd.min.js",
    "files": [
        "dist",
        "src"
    ],
    "jest": {
        "setupFiles": [
            "jest-localstorage-mock"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setupTests.js"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "@babel/preset-react": "^7.8.3",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@testing-library/user-event": "^12.4.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^25.1.0",
        "babel-loader": "^8.0.6",
        "babel-preset-es2015": "^6.24.1",
        "coveralls": "^3.0.6",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "enzyme-to-json": "^3.6.1",
        "eslint": "^5.8.0",
        "husky": "^4.3.0",
        "jest": "^25.1.0",
        "jest-localstorage-mock": "^2.4.0",
        "lint-staged": "^8.1.4",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn validate"
        }
    },
    "peerDependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    }
}
